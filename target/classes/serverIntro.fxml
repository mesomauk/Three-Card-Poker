<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml"
      fx:controller="ServerIntroController"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Three Card Poker Server" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
    <Label text="Port:"/>
    <TextField fx:id="portField" promptText="Enter port number" maxWidth="150"/>
    <Button text="Start Server" fx:id="startButton" maxWidth="150"/>
    <Label fx:id="errorLabel" textFill="red"/>
</VBox>
