<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="GameEndSceneController"
           prefHeight="700" prefWidth="1200"
           styleClass="root-pane"
           stylesheets="@../styles/gamePlaySceneStyle.css"
           fx:id="rootStack">

    <BorderPane fx:id="mainRoot">
        <top>
            <HBox>
                <Button fx:id="menuButton"
                        text="â˜°"
                        onAction="#openMenu"
                        styleClass="menu-button" />
            </HBox>
        </top>

        <center>
            <HBox alignment="CENTER" spacing="30">
                <VBox alignment="CENTER" spacing="10">
                    <VBox spacing="30">
                        <Label fx:id="gameEndingLabel"
                               style="-fx-font-size: 40px; -fx-font-weight: bold;"/>
                    </VBox>
                    <Label fx:id="roundTotalLabel"
                           text="\$0"
                           style="-fx-font-size: 22px; -fx-font-weight: bold;" />
                    <Label fx:id="finalTotalLabel"
                           text="\$0"
                           style="-fx-font-size: 22px; -fx-font-weight: bold;" />

                    <HBox spacing="40" alignment="CENTER">
                        <Button fx:id="playAgainButton"
                                text="Play Again"
                                onAction="#onPlayAgain"
                                style="-fx-font-size: 20px; -fx-padding: 10 20;" />

                        <Button fx:id="quitButton"
                                text="Quit"
                                onAction="#onQuit"
                                style="-fx-font-size: 20px; -fx-padding: 10 20;" />
                    </HBox>
                    <VBox spacing="10" alignment="CENTER">
                        <Label text="Thanks for playing!"
                               style="-fx-font-size: 16; -fx-font-style: italic;" />
                    </VBox>
                </VBox>
                <VBox spacing="10" alignment="CENTER" prefWidth="300" style="-fx-padding: 0 12 0 0;">

                    <Label text="Game Log" alignment="CENTER" style="-fx-font-weight: bold; -fx-font-size: 16;" />

                    <TextArea fx:id="logArea"
                              prefWidth="250"
                              prefHeight="500"
                              wrapText="true"
                              editable="false"
                              style="-fx-control-inner-background: #1a1a1a; -fx-text-fill: white;" />
                </VBox>
            </HBox>
        </center>
    </BorderPane>
</StackPane>