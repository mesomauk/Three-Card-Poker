<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.image.Image?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="GamePlaySceneController"
           prefHeight="700" prefWidth="1200"
           styleClass = "root-pane"
           stylesheets="@../styles/gamePlaySceneStyle.css" fx:id="rootStack">
    <BorderPane fx:id="mainRoot">
        <top>
            <HBox>
                <Button fx:id="menuButton"
                            text="â˜°"
                            onAction="#openMenu"
                            styleClass="menu-button" />
            </HBox>
        </top>
        <center>

            <StackPane alignment="CENTER">
                <HBox alignment="CENTER" spacing="30" maxWidth="Infinity">

                    <StackPane alignment="CENTER" prefWidth="300">
                        <VBox spacing="10" style="-fx-padding: 10;" alignment="CENTER">
                            <Label text="Pair Plus Payout" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
                            <TextArea fx:id="pairPlusPayoutArea"
                                      editable="false"
                                      wrapText="true"
                                      prefWidth="200"
                                      prefHeight="150"/>
                        </VBox>
                    </StackPane>
                    <VBox spacing="20" alignment="CENTER" prefWidth="500">
                        <VBox spacing="10" alignment="CENTER">
                            <Label text="Dealer's Cards" styleClass="section-label" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
                            <HBox fx:id="dealerCards" spacing="20" alignment="CENTER">
                                <ImageView fx:id="dealerCard1" fitWidth="100" fitHeight="150" />
                                <ImageView fx:id="dealerCard2" fitWidth="100" fitHeight="150" />
                                <ImageView fx:id="dealerCard3" fitWidth="100" fitHeight="150" />
                            </HBox>
                        </VBox>

                        <HBox spacing="60" alignment="CENTER">
                            <VBox alignment="CENTER" spacing="5">
                                <StackPane alignment="CENTER">
                                    <Circle fx:id="anteCircle" radius="40" styleClass="bet-circle"/>
                                    <Label text="ANTE" styleClass="bet-circle-text"/>
                                </StackPane>
                                <Label fx:id="anteBetLabel" text="\$0" styleClass="bet-amount"/>
                            </VBox>

                            <VBox alignment="CENTER" spacing="5">
                                <StackPane alignment="CENTER">
                                    <Circle fx:id="pairPlusCircle" radius="40" styleClass="bet-circle"/>
                                    <Label text="PAIR+" styleClass="bet-circle-text"/>
                                </StackPane>
                                <Label fx:id="pairPlusBetLabel" text="\$0" styleClass="bet-amount"/>
                            </VBox>

                            <VBox alignment="CENTER" spacing="5">
                                <StackPane alignment="CENTER">
                                    <Circle fx:id="playCircle" radius="40" styleClass="bet-circle"/>
                                    <Label text="PLAY" styleClass="bet-circle-text"/>
                                </StackPane>
                                <Label fx:id="playBetLabel" text="\$0" styleClass="bet-amount"/>
                            </VBox>
                        </HBox>

                        <HBox spacing="40" alignment="CENTER">
                            <VBox alignment="CENTER" spacing="10">
                                <Label text="Player's Cards" styleClass="section-label" style="-fx-font-weight: bold; -fx-font-size: 16;"/>
                                <HBox fx:id="playerCardRow" spacing="20" alignment="CENTER">
                                    <ImageView fx:id="playerCard1" fitWidth="100" fitHeight="150" />
                                    <ImageView fx:id="playerCard2" fitWidth="100" fitHeight="150" />
                                    <ImageView fx:id="playerCard3" fitWidth="100" fitHeight="150" />
                                </HBox>
                            </VBox>

                            <VBox alignment="CENTER" spacing="15">
                                <Button fx:id="dealButton" text="Deal" onAction="#onDeal"/>
                                <Button fx:id="playButton" text="Play" onAction="#onPlay"/>
                                <Button fx:id="foldButton" text="Fold" onAction="#onFold"/>
                            </VBox>

                        </HBox>
                        <HBox spacing="30" alignment="CENTER">
                            <Label text="Add Money To Bet" style="-fx-font-weight: bold; -fx-font-size: 16;" />
                            <ImageView fx:id="chip5Button"
                                       fitWidth="77" fitHeight="65"
                                       onMouseClicked="#onChip5">
                                <image>
                                    <Image url="@../Images/poker_chip.png"/>
                                </image>
                            </ImageView>
                            <ImageView fx:id="chipResetButton"
                                       fitWidth="70" fitHeight="70"
                                       onMouseClicked="#onChipReset">
                                <image>
                                    <Image url="@../Images/pokerResetChip.png"/>
                                </image>
                            </ImageView>
                            <Label text="Clear All Bets" style="-fx-font-weight: bold; -fx-font-size: 16;" />
                        </HBox>
                    </VBox>

                    <VBox spacing="10" alignment="CENTER" prefWidth="300" style="-fx-padding: 0 12 0 0;">

                        <Label text="Game Log" alignment="CENTER" style="-fx-font-weight: bold; -fx-font-size: 16;" />

                        <TextArea fx:id="logArea"
                                  prefWidth="250"
                                  prefHeight="500"
                                  wrapText="true"
                                  editable="false"
                                  style="-fx-control-inner-background: #1a1a1a; -fx-text-fill: white;" />
                    </VBox>
                </HBox>
            </StackPane>
        </center>
    </BorderPane>
</StackPane>