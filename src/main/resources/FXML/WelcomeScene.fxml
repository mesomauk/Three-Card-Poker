<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.Label?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@../styles/welcomeStyle.css"
            fx:controller = "WelcomeSceneController"
            prefHeight="700" prefWidth="1200"
            fx:id="borderPane">

    <center>
        <VBox alignment="CENTER" spacing="5">
            <Label text="Welcome to Three Card Poker"
                   styleClass = "title"
                   BorderPane.alignment="CENTER"/>

            <VBox spacing="15" alignment="CENTER">
                <Label text="IP Address:"/>
                <TextField fx:id="ipField" promptText="e.g. 127.0.0.1" maxWidth = "200"/>
            </VBox>

            <VBox spacing="15" alignment="CENTER">
                <Label text="Port:"/>
                <TextField fx:id="portField" promptText="e.g. 8000" maxWidth = "200"/>
            </VBox>

            <Button fx:id="connectButton" text="Connect" onAction="#handleConnect"/>
        </VBox>
    </center>


</BorderPane>
